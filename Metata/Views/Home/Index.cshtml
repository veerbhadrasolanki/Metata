@{
    ViewData["Title"] = "Home Page";
}
<div class="container-fluid header">
    <div class="container-fluid" style="height: 100px;"></div>
    <div class="row">
        <div class="col-2"></div>
        <div class="col-8">
            <h1 class="display-4 heading-main">Welcome To Metata</h1>
          
            <p class="description mt-2">Web based digital tools that work inside your browser.</p> 
        </div>
        <div class="col-2"></div>
    </div>
</div>
<div class="container">
  <div class="wrapper">
      <div class="container-sidebar">
      <div>
        <nav>
          <ul class="tools-categories-menu">
            <li><a class="list-a" href="/dev/">Dev Tools</a></li>
            <li><a class="list-a" href="/math/">Math Tools</a></li>
          </ul>
        </nav>
      </div>
    </div>

    <div class="container-content">
          <div id="tools" class="wrapper-inside"> 
              <ul class="tools-featured grid">
                <li class="one-half mb-12">
                  <h2 class="entry-title pb-2 border-b mb-6">
                    <a href="#">Dev Tools</a>
                  </h2>
                  <ul class="tool-list">
                    <li>
                      <div class="flex my-4">
                        <div class="w-10">
                          <a
                            class="thumbnail thumbnail-mini rounded  block hover:shadow-xl"
                             asp-area="" asp-controller="Pages" asp-action="ImageToBase64"
                            style="background-color: #607d8b">
                            <span class="sr-only">Image Cropper</span>
                            <span> </span >
                          </a>
                        </div>
                        <div class="w-auto ml-4">
                          <h3 class="entry-title">
                            <a  asp-area="" asp-controller="Pages" asp-action="ImageToBase64">Image To Base64</a>
                          </h3>
                          <div
                            class="entry-meta mt-1"
                            style="font-size: 13.8px"
                          >
                            Easily convert Image to Base64 and Copy
                          </div>
                        </div>
                      </div>
                    </li>
                     <li>
                      <div class="flex my-4">
                        <div class="w-10">
                          <a
                            class="thumbnail thumbnail-mini rounded  block hover:shadow-xl"
                             asp-area="" asp-controller="Pages" asp-action="Base64ToImage"
                            style="background-color: #607d8b">
                            <span class="sr-only">Image Cropper</span>
                            <span> </span >
                          </a>
                        </div>
                        <div class="w-auto ml-4">
                          <h3 class="entry-title">
                            <a  asp-area="" asp-controller="Pages" asp-action="Base64ToImage" >Base64 To Image</a>
                          </h3>
                          <div
                            class="entry-meta mt-1"
                            style="font-size: 13.8px"
                          >
                            Easily convert Base64 to Image and Download
                          </div>
                        </div>
                      </div>
                    </li>
                     <li>
                      <div class="flex my-4">
                        <div class="w-10">
                          <a
                            class="thumbnail thumbnail-mini rounded  block hover:shadow-xl"
                             asp-area="" asp-controller="Pages" asp-action="WeightConvertor"
                            style="background-color: #607d8b">
                            <span class="sr-only">Image Cropper</span>
                            <span> </span >
                          </a>
                        </div>
                        <div class="w-auto ml-4">
                          <h3 class="entry-title">
                            <a  asp-area="" asp-controller="Pages" asp-action="WeightConvertor" >Weight Convertor</a>
                          </h3>
                          <div
                            class="entry-meta mt-1"
                            style="font-size: 13.8px"
                          >
                            Easily Weight Convert
                          </div>
                        </div>
                      </div>
                    </li>
                    </ul>
              </ul>
      </div>
    </div>
    
  </div>
</div>
